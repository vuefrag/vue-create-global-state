    "store",
    "create",
    "global",
    "shared",
    "singleton",
    "cross-component",
    "createGlobalState"
  ],
  "author": "VueFrag",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuefrag/vue-create-global-state.git"
  },
  "bugs": {
    "url": "https://github.com/vuefrag/vue-create-global-state/issues"
  },
  "homepage": "https://github.com/vuefrag/vue-create-global-state#readme",
  "peerDependencies": {
    "vue": ">=3.0.0"
  },
  "devDependencies": {
    "unbuild": "^2.0.0",
    "typescript": "^5.0.0",
    "vue": "^3.4.0"
  }
