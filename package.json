{
  "name": "vue-create-global-state",
  "version": "1.0.0",
  "description": "Vue 3 global reactive state shared across all components",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
